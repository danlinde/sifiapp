

<%= form_for @event, html: {multipart: true } do |e| %>
<div class="row">
	<div class="large-6 columns">
		<%= e.label :name %>
		<%= e.text_field :name %>
	</div>
	<div class="large-6 columns">
		<%= e.label :description %>
		<%= e.text_field :description %>
	</div>
</div>
<div class="row">
	<div class="large-3 columns">
		<%= e.label :deadline %>
		<%= e.datetime_select :deadline, :order => [:day, :month, :year, :hour, :minute] %>
	</div>
	<div class="large-3 columns">
		<%= e.label :link %>
		<%= e.text_field :link %>
	</div>
	<div class-"large-2 columns">
		<%= e.label :image %>
		<%= e.file_field :image, class: "button secondary" %>
		<%= e.hidden_field :organizer_id, value: current_organizer.id %>
	</div>
</div>

		<%= event_p.label :email %>
		<%= event_p.text_field :email, placeholder: "Enter your email", id: 'email_input' %>
		

	<%= e.fields_for :participants do |event_p| %>
		<div class-"row">
			<%= event_p.label :email %>
			<%= event_p.text_field :email, placeholder: "Enter your email" %>

			<%= event_p.label :first_name %>
			<%= event_p.text_field :first_name, placeholder: " Enter your first name" %>
			<%= event_p.label :last_name %>
			<%= event_p.text_field :last_name, placeholder: " Enter your last name" %>
		</div>
    <% end %>
	
	<%= e.submit id:'event_form_submit', class: "button round" %>
<% end %>
