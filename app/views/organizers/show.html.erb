<div class="row">
	<h3>Welcome, <%= @organizer.email %></h3>
</div>

<div class="row">
	<div class="large-6 columns">
		<h5>Your events:</h5>
	</div>
	<div class="large-6 columns"><%= link_to "Create event", new_event_path, class: "button radius" %>
	</div>
</div>

<ul>
	<% @organizer.events.each do |event| %>
		
		<div class="row panel">
			<div class="large-3 columns">
			<%= image_tag event.image.url(:thumb), class: 'event_image' %>
				
			</div>
			<div class="large-9 columns">

				<h4><%= link_to "#{event.name}", event_path(event) %></h4>
				<p><%= event.description %></p>
			</div>
		</div>
	</div>
	<% end %>
</ul>

