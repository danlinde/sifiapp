<div class="pagewrap" >
<div class="row">
		
	
	<fieldset>
	<div class="large-12 columns">
		<h3 ><%= @event.name %></h3>
	</div>
	<div class="small-6 columns">

		<div class="large-12 columns">
           <div class = "panel">
			<p><h5 textlign = "centre">Your RSVP is due in:<%= nice_date @event.deadline %></h5></p>
			<div id="timer" data-ends-at="<%= iso8601_date @event.deadline %>"></div>
		   </div> 
		</div>

        <div class="large-12 columns">
        	<p><h6>Event Date:</h6>
			<span><%= nice_date @event.event_date %></span></p>
			<p><%= @event.description %></p>
			<p>Link: <%= link_to @event.link %></p>
	    </div>
  
		 <div class="large-12 columns">
			<% if current_organizer == @event.organizer %>
				<p><%= link_to "Edit event", edit_event_path(@event),class: "button radius" %></p>
				<p><%= button_to "Delete Event", @event, class: "button radius",:method=>:delete, data: {confirm: 'Are you sure?'} %></p>


			<% end %>
		</div>

    </div>


   <div class="small-6 columns">


		<div class="small-12 columns">
			<%= image_tag @event.image.url(:medium), class: 'event_image' %>
		</div> 
		<hr>
		
			<%if @token %>
				<%= render "shared/edit_participant_response" %>
			<% end %>
	

		<div id="response" class="large-12 columns">
			<h6>Your Invitees</h6>
			<div class = "section-container accordion" data-section="accordion">
				<section class="section active">
					<p class="title">
						<a href="#panel1">Going</a>
					</p>
					<div class="content" data-slug="panel1">
					  <p>
					  	<% @participants.each do |f| %>
				           <% if f.response == "Yes" %>
					       <li class="li_email"><%= f.email %></li>
					    <% end %>
				        <% end %>
					  </p>	
					 </div>
				</secion>
				<section class="section active">
					<p class="title">
						<a href="#panel1">Not Going</a>
					</p>
					<div class="content" data-slug="panel1">
					  <p>
					  	<% @participants.each do |f| %>
				           <% if f.response == "No" %>
					       <li class="li_email"><%= f.email %></li>
					    <% end %>
				        <% end %>
					  </p>	
					 </div>
				</secion>		
				<section class="section active">
					<p class="title">
						<a href="#panel1">Maybe</a>
					</p>
					<div class="content" data-slug="panel1">
					  <p>
					  	<% @participants.each do |f| %>
				           <% if f.response == "Maybe" %>
					       <li class="li_email"><%= f.email %></li>
					    <% end %>
				        <% end %>
					  </p>	
					 </div>
				</secion>
				<section class="section active">
					<p class="title">
						<a href="#panel1">Waiting to response</a>
					</p>
					<div class="content" data-slug="panel1">
					  <% @participants.each do |f| %>
				        <% unless ['Yes', 'No', "Maybe"].include?(f.response) %>
					    <li class="li_email"><%= f.email %></li>
                        <% end %>
				      <% end %>
					</div>
				</secion>

			</div>		


        </div>

	  </div>               
	</fieldset>

</div>
</div>