<h1><%= @event.name %></h1>
<h3><%= @event.description %></h3>
<h3><%= @event.deadline %></h3>

<div id="timer" data-ends-at="<%= @event.deadline %>"></div>

<h3>Participants</h3>

<ul><% @event.participants.each do |f| %>
	
	<%= content_tag :li, f.email %>
	<%= content_tag :li, f.first_name + " " + f.last_name %>
	<%= content_tag :li, f.response, :"data-id" => f.id %>

	<% end %>
</ul>

<h3><%= @event.link %></h3>
<h3><%= image_tag @event.image.url(:thumb), class: 'event_image' %></h3>


<% if current_organizer == @event.organizer %>
	<p><%= link_to "Edit event", edit_event_path(@event),class: "button radius" %></p>
	<p><%= button_to "Delete Event", @event, class: "button radius",:method=>:delete, data: {confirm: 'Are you sure?'} %></p>
<% end %>


<div class="windowed select-one">
	<select id="wp_3329327784013003">
		<option>TAKE</option>
		<option>IT</option>
		<option>SLOW</option>
	</select>
	<ul>
		<li class="" style="height: 35px; line-height: 35px;">5 HRS</li>
		<li style="height: 35px; line-height: 35px;" class="selected">12 HRS</li>
		<li style="height: 35px; line-height: 35px;" class="">24 HRS</li>
	</ul>
	<div class="slider" style="border-width: 5px; width: 80px; height: 35px; left: 72px; top: 1px;"></div>
</div>
