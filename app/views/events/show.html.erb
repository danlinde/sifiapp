<div class="row panel">
	
	<div class="small-6 columns">
		<h3 class="subheader"><%= @event.name %></h3>
		<span><%= @event.deadline.strftime("%Y-%m-%d %H:%M") %></span>
		<span><%= @event.event_date.strftime("%Y-%m-%d %H:%M") %></span>

		<div id="timer" data-ends-at="<%= @event.deadline %>"></div>
	</div>
	<div class="small-6 columns">
		<%= image_tag @event.image.url(:medium), class: 'event_image' %>
	</div> 
	

	  <div class="large-8 columns">
			<p><%= @event.description %></p>

			<p>Link: </p>
			<p><%= link_to @event.link %></p>
		</div>

		<div class="large-4 columns">

		<h6><%= nice_date @event.deadline %></h6>
		<h6><%= nice_date @event.event_date %></h6>

		<div id="timer" data-ends-at="<%= @event.deadline %>"></div>
	  </div>


		<%if @token %>
			<%= render "shared/edit_participant_response" %>
		<% end %>
	

	<div class="large-6 columns">
		<h5>Your Invitees</h5>

		<ul class="no-bullet">
			<span class="Invite_Status">Going</span>
			<% @participants.each do |f| %>
			
				<% if f.response == "Yes" %>
				
				<li class="li_email"><%= f.email %></li>

				<% end %>
			<% end %>
		</ul>


		<ul class="no-bullet">
			<span class="Invite_Status">Not Going</span>
			<% @participants.each do |f| %>
			
				<% if f.response == "No" %>
				
				<li class="li_email"><%= f.email %></li>

				<% end %>
			<% end %>
		</ul>

		<ul class="no-bullet">
			<span class="Invite_Status">Maybe</span>
			<% @participants.each do |f| %>
			
				<% if f.response == "Maybe" %>
				
				<li class="li_email"><%= f.email %></li>

				<% end %>
			<% end %>
		</ul>

		<ul class="no-bullet">			
			<span class="Invite_Status">Waiting for response</span>
			<% @participants.each do |f| %>
			
				<% unless ['Yes', 'No', "Maybe"].include?(f.response) %>
				
				<li class="li_email"><%= f.email %></li>

				<% end %>
			<% end %>
		</ul>

	</div>


		<% if current_organizer == @event.organizer %>
			<p><%= link_to "Edit event", edit_event_path(@event),class: "button radius" %></p>
			<p><%= button_to "Delete Event", @event, class: "button radius",:method=>:delete, data: {confirm: 'Are you sure?'} %></p>
		<% end %>
	</div>

</div>