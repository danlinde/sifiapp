<h2>Create your event</h2>

<%= form_for @event do |e| %>
	<%= e.label :name %>
	<%= e.text_field :name %>
	<%= e.label :description %>
	<%= e.text_field :description %>
	<%= e.label :deadline %>
	<%= e.datetime_field :deadline %>

	<%= e.fields_for :participants do |event_p| %>

		<%= event_p.label :email %>
		<%= event_p.text_field :email, placeholder: "Enter your email" %>

		<%= event_p.label :first_name %>
		<%= event_p.text_field :first_name, placeholder: " Enter your first name" %>
		<%= event_p.label :last_name %>
		<%= event_p.text_field :last_name, placeholder: " Enter your last name" %>
    <% end %>
	<%= e.submit 'Create Event' %>
<% end %>
