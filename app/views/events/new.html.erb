<h2>Create your event</h2>

<%= form_for @event, html: {multipart: true} do |e| %>
	<%= e.label :name %>
	<%= e.text_field :name %>
	<%= e.label :description %>
	<%= e.text_field :description %>
	<%= e.label :deadline %>
	<%= e.datetime_field :deadline %>
	<%= e.label :link %>
	<%= e.text_field :link %>
	<%= e.label :image %>
	<%= e.file_field :image %>
	<%= e.hidden_field :organizer_id, value: current_organizer.id %>
	<%= e.submit 'Create Event' %>
<% end %>
